{
  "manifest_version": 3,
  "name": "YouTube Parts Looper",
  "version": "1.0.0",
  "description": "Play one or more intervals (ranges) of a YouTube video on a loop.",
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at" : "document_start"
    }
  ]
}

